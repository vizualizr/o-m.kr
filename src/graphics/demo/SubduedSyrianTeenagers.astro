<div id="myplot"></div>

<div id="info">다음 기회에!</div>

<script is:inline src="https://d3js.org/d3.v7.min.js"></script>
<script is:inline src="https://observablehq.com/plot/plot.min.js"></script>

<script>
  const xCoord = [0, 10, 20, 30, 40];
  const index = [0, 1, 2];
  const rad = [100, 8, 11];
  const plot = Plot.plot({
    marks: [Plot.dot(index, { x: xCoord, y: 25, r: rad})],
  });

  // console.log(plot);
  // console.log("typeof() " + typeof(plot));
  // console.log(document.createElement("p"));
  // console.log("typeof() " + typeof(document.createElement("p")));

  const div1 = document.querySelector("#myplot");
  console.log(div1);
  const div2 = d3.select("#myplot").node();
  console.log(div2);
  div2.append(plot);

  d3.select("#info").text("hello");
</script>